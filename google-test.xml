<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Google Search Chrome Test Suit">

    <test verbose="2" name="Chrome - Browser Stack - Google Search">
        <classes>
            <class name="io.raveerocks.GoogleServiceTest">
                <parameter name="browser" value="chrome"></parameter>
                <parameter name="searchTerm" value="Browser Stack"></parameter>
                <parameter name="expectedTitle" value="Browser Stack - Google Search"></parameter>
                <parameter name="isLocalTest" value="true"></parameter>
                <methods>
                    <include name="searchByEnterTest"/>
                    <include name="searchByClickTest"/>
                </methods>
