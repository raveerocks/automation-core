<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd"

        [<!ENTITY testNameSuffix "Browser Stack - Google Search">
                <!ENTITY searchTerm "Browser Stack">
                <!ENTITY expectedTitle "Browser Stack - Google Search">
                <!ENTITY isLocalTest "true">]
        >

<suite name="Google Search Test Suit">

    <test verbose="2" name="Chrome - &testNameSuffix;">
        <classes>
            <class name="io.raveerocks.GoogleServiceTest">
                <parameter name="browser" value="chrome"></parameter>
                <parameter name="searchTerm" value="&searchTerm;"></parameter>
                <parameter name="expectedTitle" value="&expectedTitle;"></parameter>
                <parameter name="isLocalTest" value="&isLocalTest;"></parameter>
                <methods>
                    <include name="searchByEnterTest"/>
                    <include name="searchByClickTest"/>
                </methods>
            </class>
        </classes>
    </test>

